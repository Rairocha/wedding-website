<h2>Add Gift in Registry</h2>

<form action="/registry/create/{{weddingId}}" method="post">

    <label for="name">Name</label>
    <input id="name" type="text" name="name">

    <label for="description">Description</label>
    <input id="description" type="text" name="description">

    <label for="price">Price</label>
    <input id="price" type="number" min="0.00" step="0.01" name="price">

    <label for="imageUrl">Image</label>
    <input id="imageUrl" type="text" name="imageUrl">

    <label for="quantity">Quantity</label>
    <input id="quantity" type="number" min="0" step="1" name="quantity">

    <button type="submit">Add gift</button>

</form>