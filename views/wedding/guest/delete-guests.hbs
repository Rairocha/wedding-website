<h2>Delete Guests</h2>
{{#if noGuest}}
<form action="/wedding/delete-guests/{{_id}}" method="post">
{{#each guests}}
    <label for={{this}}>Remove guest {{this}}</label>
    <input type="checkbox" name={{this}} >
    </br>
    
{{/each}}
<button type="submit">Delete guests</button>
</form>
{{else}}
<p>No guests to delete</p>
{{/if}}